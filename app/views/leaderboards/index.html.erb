
<div class="container">
  <h1 style="text-align: center;">Leaderboards</h1>
  <hr class="black-line">
  <table class="my-table no-border table-hover">
    <thead>
      <tr>
        <th scope="col" class="my-th">Rank</th>
        <th scope="col" class="my-th">User</th>
        <th scope="col" class="my-th">Games Played</th>
        <th scope="col" class="my-th">Sets Found</th>
      </tr>
    </thead>
    <tbody>
      <% @users.each do |user| %>
        <tr class="">
          <th class="my-td"><%= user.id %></th>
          <td class="my-td"><%= user.user_name %></td>
          <td class="my-td"><%= user.game_count %></td>
          <td class="my-td"><%= user.sets_found %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
<hr class="black-line">
<div> 
  <%= link_to "Go Back", menu_path, class: "btn btn-outline-dark btn-block w-100 text-center"  %>
</div>


